<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="show-container">
            <div class="row">
                <div class="col-8 offset-3">
                    <h2>
                        <b>
                            <%= listing.title %>
                        </b>
                    </h2>
                </div>
                <div class="card col-6 offset-3 listing-card mb-0">
                    <div class="listing-card">
                        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing-image">
                        <div class="card-body mb-0">
                            <p class="card-text">
                                <i>By <%= listing.owner.username%></i>
                                <br>
                                <%= listing.description %><br>
                                    <b>Price:</b> &#8377;<%= listing.price.toLocaleString("en-IN") %><br>
                                        <%= listing.location %><br>
                                            <%= listing.country %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
                <div class="btns">
                    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3"
                        style="background-color: #FF6B6B;">Edit</a>
                    <br>
                    <form method="post" action="/listings/<%= listing._id%>?_method=DELETE">
                        <button class="btn btn-dark  offset-4">Delete</button>
                    </form>
                </div>
            <% } %>

            <hr>
            <div class="col-8 offset-3 mb-4">
                <h4>Review</h4>
                <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
                    <div class="mb-3 mt-3">
                        <label for="rating" class="form-label">Rating</label>
                        <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" style="width: 50%;">
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="comment" class="form-label">Comments</label>
                        <textarea name="review[comment]" id="comment" cols="30" class="form-control" required></textarea>
                    </div>
                    <button class="btn btn-outline-dark">Submit</button>
                </form>
                <hr>
                <h4>All Reviews</h4>
                <div class="row">
                    <% for(let review of listing.reviews){ %>
                    <div class="card col-5 ms-3 mb-2">
                        <div class="card-body">
                            <p class="card-text">
                                <%= review.comment %> <br>
                                <%= review.rating %>‚≠ê
                            </p>
                        </div>
                        <div>
                            <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-dark mb-3">Delete</button>
                            </form>
                        </div>
                    </div>
                    <% } %>
                </div>         
            </div>
        </div>
    </body>