<% layout("/layouts/boilerplate.ejs") %>

    <!-- About Hero -->
    <div class="about-hero">
        <div class="about-hero-content">
            <h1>About Adventure Explorer</h1>
            <p>We're passionate about creating unforgettable travel experiences that connect people with the world's most amazing destinations.</p>
        </div>
    </div>

    <!-- About Content -->
    <section class="about-content">
        <div class="container">
            <div class="about-section">
                <h1>Our Mission & Vision</h1>
                <div class="mission-vision">
                    <div class="mission-card">
                        <i class="fas fa-compass"></i>
                        <h3>Our Mission</h3>
                        <p>To inspire and enable people to explore the world through authentic, sustainable, and transformative travel experiences that create lasting memories and positive impact.</p>
                    </div>
                    <div class="vision-card">
                        <i class="fas fa-eye"></i>
                        <h3>Our Vision</h3>
                        <p>To be the world's leading adventure travel company, known for exceptional experiences, environmental stewardship, and cultural preservation.</p>
                    </div>
                </div>
            </div>
            
            <div class="about-section">
                <h1>Our Values</h1>
                <div class="values-grid">
                    <div class="value-card">
                        <i class="fas fa-leaf"></i>
                        <h3>Sustainability</h3>
                        <p>We're committed to minimizing our environmental impact and promoting responsible tourism practices.</p>
                    </div>
                    <div class="value-card">
                        <i class="fas fa-handshake"></i>
                        <h2>Authenticity</h2>
                        <p>We believe in providing genuine experiences that connect travelers with local cultures and communities.</p>
                    </div>
                    <div class="value-card">
                        <i class="fas fa-heart"></i>
                        <h2>Passion</h2>
                        <p>Our love for adventure and exploration drives everything we do, inspiring our customers to discover the world.</p>
                    </div>
                    <div class="value-card">
                        <i class="fas fa-users"></i>
                        <h2>Community</h2>
                        <p>We foster meaningful connections between travelers, local communities, and our team members.</p>
                    </div>
                </div>
            </div>
            
            <div class="stats-section">
                <div class="container">
                    <div class="stats-grid">
                        <div class="stat-item">
                            <h3>10+</h3>
                            <p>Years of Experience</p>
                        </div>
                        <div class="stat-item">
                            <h3>500+</h3>
                            <p>Successful Trips</p>
                        </div>
                        <div class="stat-item">
                            <h3>5000+</h3>
                            <p>Happy Travelers</p>
                        </div>
                        <div class="stat-item">
                            <h3>50+</h3>
                            <p>Destinations</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="about-section">
                <h1>Our Team</h1>
                <div class="team-grid">
                    <div class="team-member">
                        <div class="team-member-image">
                            <img src="/images/IMG-20240601-WA0080.jpg" alt="John Smith">
                        </div>
                        <div class="team-member-info">
                            <h3>Manthan Jasoliya</h3>
                            <div class="position">Founder & CEO</div>
                            <p>With over 15 years of experience in adventure travel,Deep founded Adventure Explorer with a vision to create transformative travel experiences.</p>
                            <div class="team-member-social">
                                <a href="https://www.linkedin.com/in/manthan-jasoliya"><i class="fab fa-linkedin"></i></a>
                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>